<header class="header-container flex-column background-main">
  <nav class="menu-fixed d-flex width-100 background-main justify-flex-end">
    <i class="fas fa-bars color-primary hidden-md"></i>
    <div class="div-nav">
      <a href="/login" class="padding-0-3">
        <i class="fas fa-sign-in-alt color-primary"></i
      ></a>

      <a href="/cart" class="padding-0-3">
        <i class="fas fa-shopping-cart color-primary"></i
      ></a>
      <% if(user) { %>
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="no-border center-text font-jura font-size-14 color-primary padding-0-3 background-main"
        >
          <i class="fas fa-power-off color-primary"></i>
        </button>
      </form>
      <% } %>
    </div>
  </nav>
  <div class="flex-end padding-25 flex-column">
    <div>
      <h1 class="color-primary font-arimo font-size-14 margin-5">
        Hola <%= user ? user.firstName : "" %>
      </h1>
    </div>
    <div class="flex-end">
      <% if(user) { %>
      <a
        href="/profile/<%=user.id%> "
        class="color-primary font-arimo font-size-14 margin-5"
        >Mi perfil</a
      >
      <% } %>
    </div>
  </div>
  <div class="header-lg">
    <a href="/">
      <div class="margin-top-20">
        <img
          src="/images/products/logoCala.jpg"
          class="logo image-header"
          alt="Logo Cala"
        /></div
    ></a>
    <form action="/search" method="GET">
      <div class="search-container d-flex radius-5">
        <input
          name="searchquery"
          class="no-border"
          type="search"
          placeholder="Busca tus productos"
        />
        <button class="no-border width-10" type="submit">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>
  </div>
  <div class="nets-container flex-auto-lg width-lg">
    <ul class="header-menus flex-wrap justify-rigth-lg">
      <li class="padding-nets-15">
        <a href="https://twitter.com/CalaCosmetics"
          ><i class="fab fa-twitter-square color-primary"></i
        ></a>
      </li>
      <li class="padding-nets-15">
        <a href="#"><i class="fab fa-facebook-square color-primary"></i></a>
      </li>
      <li class="padding-nets-15">
        <a href="https://www.instagram.com/cala_cosmetics/"
          ><i class="fab fa-instagram color-primary"></i
        ></a>
      </li>
      <li class="padding-nets-15">
        <a href="#"><i class="fas fa-share-alt color-primary"></i></a>
      </li>
    </ul>
  </div>
  <div class="width-100">
    <nav class="hidden show">
      <ul class="header-menus flex-wrap color-primary font-arimo">
        <li><a class="color-primary" href="/">Inicio</a></li>
        <li><a class="color-primary" href="/products">Productos</a></li>
        <%if(user){ %> <% if(user.categoryId == 2) { %>
        <li>
          <a class="color-primary" href="/products/create">Crear Producto</a>
        </li>
        <%}%> <%}%>
        <li><a class="color-primary" href="/about">Sobre Nosotras</a></li>
        <li><a class="color-primary" href="/contact">Contacto</a></li>
      </ul>
    </nav>
  </div>
</header>
