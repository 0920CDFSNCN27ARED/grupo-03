<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../partials/head-base",{title:"Login"}) %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/validation.css" />
    <script type="text/javascript" src="/js/validator.min.js"></script>
    <script src="/js/validation-users-validator.js"></script>
  </head>

  <body class="background-main">
    <%-include("../partials/header") %>

    <main>
      <div
        class="background-image-9  main-form-container flex-column wrap forms-lg"
      >
        <section
          class="form-container  center-text radius-5 width-auto "
        >
          <h3 class="font-arimo color-secondary font-size-25lg">Registrate</h3>
          <% if(typeof errors != "undefined") { %>
          <ul>
            <% for (let i = 0; i < errors.length; i ++) { %>
            <li><%= errors[i].msg %></li>
            <% } %>
          </ul>
          <% } %>
          <form
            action="/register"
            method="POST"
            class="flex-column"
            enctype="multipart/form-data"
            id="registerForm"
          >
            <label
              for="firstName"
              class="font-jura font-size-medium flex-column font-size-20lg font-weight-bold color-secondary margin-5"
              >Ingresa tu Nombre
            </label>
            <input
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
              type="text"
              name="firstName"
              id="firstName"
              placeholder="Maria"
            />
            <div id="firstNameFeedback" class="feedback"></div>
            <label
              for="lastName"
              class="font-jura font-size-medium flex-column font-size-20lg font-weight-bold color-secondary margin-5"
              >Ingresa tu Apellido
            </label>
            <input
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
              type="text"
              name="lastName"
              id="lastName"
              placeholder="Perez"
            />
            <div id="lastNameFeedback" class="feedback"></div>
            <label
              for="user"
              class="font-jura font-size-medium flex-column font-size-20lg margin-5 font-weight-bold color-secondary"
              >Crea un nombre de usuario
            </label>
            <input
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
              type="text"
              name="user"
              id="user"
              placeholder="mariaperez"
            />
            <div id="userFeedback" class="feedback"></div>
            <label
              for="email"
              class="font-jura font-size-medium flex-column font-size-20lg margin-5 font-weight-bold color-secondary"
              >Ingresa tu email</label
            >
            <input
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
              type="email"
              name="email"
              id="email"
              placeholder="mariaperez@mail.com"
            />
            <div id="emailFeedback" class="feedback"></div>
            <p class="font-jura font-size-medium font-weight-bold color-secondary margin-5">Imagen</p>
            <input type="file" name="image" id="image" class="validate background-main" />
            <div id="imageFeedback" class="feedback"></div>
            <label
              for="password"
              class="font-jura font-size-medium flex-column font-size-20lg margin-5 font-weight-bold color-secondary"
              >Crea una clave</label
            >
            <input
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
              type="password"
              name="password"
              id="password"
              placeholder="minimo 8 caracteres"
            />
            <div id="passwordFeedback" class="feedback"></div>

            <label
              for="password"
              class="font-jura font-size-medium flex-column font-size-20lg margin-5 font-weight-bold color-secondary"
              >Confirma tu clave</label
            >
            <input
              type="password"
              name="passConf"
              id="passConf"
              class="no-border radius-5 center-text font-bellefair font-size-20lg height-5-vh width-75 validate background-main"
            />
            <div id="passConfFeedback" class="feedback"></div>
            <button
              type="submit"
              class="center-text font-jura font-size-medium font-size-20lg font-weight-bold color-secondary margin-5"
            >
              Registrarme
            </button>
          </form>
        </section>
      </div>
    </main>

    <%-include("../partials/footer") %>
  </body>
</html>
