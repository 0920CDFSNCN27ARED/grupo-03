<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../partials/head-base",{title:"Login"}) %>

    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/validation.css" />

    <script type="text/javascript" src="/js/validator.min.js"></script>
    <script src="/js/validation-users-validator.js"></script>
  </head>

  <body class="background-main">
    <%-include("../partials/header") %>

    <main>
      <div
        class="background-main main-form-container flex-column wrap forms-lg"
      >
        <section
          class="form-container center-text radius-5 width-auto background-image-two"
        >
          <h3 class="font-arimo font-size-25lg color-secondary">
            Ingresa a tu cuenta
          </h3>
          <% if(typeof errors != "undefined") { %>
          <ul>
            <% for (let i = 0; i < errors.length; i ++) { %>
            <li><%= errors[i].msg %></li>
            <% } %>
          </ul>
          <% } %>
          <form action="/" method="POST" class="flex-column" id="loginForm">
            <div>
              <input
                class="font-bellefair no-border radius-5 center-text font-size-20lg validate"
                type="text"
                name="user"
                id="user"
                placeholder="Nombre de usuario"
                value='<%= loginData ?
            loginData.user : "" %>'
              />
              <div id="userFeedback" class="feedback"></div>
            </div>
            <div>
              <input
                class="no-border radius-5 center-text font-bellefair font-size-20lg validate"
                type="password"
                name="password"
                id="password"
                placeholder="Contrasena"
              />
              <div id="passwordFeedback" class="feedback"></div>
            </div>
            <button
              type="submit"
              class="no-border center-text font-jura font-size-20lg"
            >
              Ingresar
            </button>
            <div
              class="checkbox-form d-flex font-jura font-size-14 color-secondary"
            >
              <p class="font-size-20lg">
                <label for="remember">Recordar usuario </label>
              </p>
              <input
                class="no-border radius-5 center-text width-10 font-size-20lg"
                type="checkbox"
                name="remember"
                value="yes"
                checked
              />
            </div>
            <div>
              <a href="#" class="font-jura font-size-14 font-size-20lg"
                >Recuperar contrase√±a</a
              >
            </div>
          </form>
          <h2 class="font-arimo color-secondary font-size-14">
            Todavia no te registraste?
          </h2>
          <a href="/register">
            <button
              class="font-arimo color-secondary font-size-14 no-border width-auto"
            >
              Registrarme
            </button></a
          >
        </section>
      </div>
    </main>

    <%-include("../partials/footer") %>
  </body>
</html>
